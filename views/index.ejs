<!DOCTYPE html>
<html lang="ko">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>카카오페이지</title>
  <link rel="stylesheet" href="css/normalize.css">
  <link rel="stylesheet" href="css/css.css">
  <link rel="stylesheet" href="css/scss.css">
</head>

<body class="bg-light">
  <header class="pt-5 px-4 bg-white">
    <div class="d-flex p-relative">
      <h1 class="d-inline m-0">
        <a href="/">Kakaopage</a>
      </h1>
      <div class="d-flex p-absolute right-0 h-100">
        <input type="text" name="search" id="input_search">
        <button>캐시충전</button>
        <span>|</span>
        <button>로그인</button>
      </div>
    </div>
    <nav>
      <ul class="d-flex">
        <%
          const navList = ['홈', '웹툰', '웹소설', '영화', '방송', '책']
          let selected = 'selected';
          for (const title of navList) {
        %>
          <li role="button" class="nav-item p-4" data-nav="main" <%= selected %>>
            <%= title %>
          </li>
        <%
            selected = ''
          }
        %>
      </ul>
    </nav>
  </header>

  <div id="main_section" class="container">
    <%- include('_home'); -%>
    <%- include('_webtoon'); -%>
    <%- include('_webfiction'); -%>
    <%- include('_movie'); -%>
    <%- include('_broadcast'); -%>
    <%- include('_book'); -%>
  </div>

  <script src="js/js.js"></script>
</body>

</html>