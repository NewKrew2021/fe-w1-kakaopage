<!--

{
  title: string or undefined
  titleCount: integer or undefined
  components: array of _
}

-->
<div class="bg-white my-1 p-3">
  <!-- header -->
  <% if (typeof title !== 'undefined') { %>
  <div class="d-flex">
    <h2><%= title %></h2>
    <% if (typeof titleCount !== 'undefined') { %>
    <small class="gray">(<%= titleCount %>)</small>
    <% } %>
    <button class="ml-auto gray">더보기 &GT;</button>
  </div>
  <% } %>

  <!-- components -->
  <% if (components.length) { %>
    <%- include('_', { components: components }) %>
  <% } %>
</div>