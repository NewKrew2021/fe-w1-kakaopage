<!--

{
  title: string or undefined
  titleCount: integer or undefined
  noPadding: true or undefined
  components: array of _
}

-->
<div class="box <%= (typeof noPadding !== 'undefined' ? 'p-0' : '') %>">
  <!-- header -->
  <% if (typeof title !== 'undefined') { %>
  <div class="d-flex">
    <h2 class="my-2"><%= title %></h2>
    <% if (typeof titleCount !== 'undefined') { %>
    <small class="ml-1 gray">(<%= titleCount %>)</small>
    <% } %>
    <button class="px-0 ml-auto gray">더보기 &GT;</button>
  </div>
  <% } %>

  <!-- components -->
  <% if (typeof components !== 'undefined') { %>
    <%- include('_', { components: components }) %>
  <% } %>
</div>